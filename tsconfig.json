{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "public/*"],

  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./built",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] }
  }
}
